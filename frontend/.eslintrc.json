{
	"env": {
		"browser": true,
		"es6": true
	},
	"extends": ["eslint:recommended", "prettier", "plugin:react/recommended"],
	"rules": {
		"no-extra-semi": "warn",
		"quotes": ["warn", "single"],
		"react/jsx-uses-react": "off",
		"react/react-in-jsx-scope": "off"
	},
	"parserOptions": {
		"parser": "babel-eslint",
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true,
			"impliedStrict": true
		}
	}
}
